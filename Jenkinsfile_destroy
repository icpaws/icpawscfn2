pipeline {
    agent {
        node {
            label 'master'
        }
    }

    stages {

        stage('terraform started') {
            steps {
                sh 'echo "Started...!" '
            }
        }
        stage('terraform destroy') {
            steps {
                sh 'echo "Ended....!!"'
                sh 'terraform destroy -auto-approve /var/jenkins_home/workspace/AWS/build_icpawsterraformdemo/icpawscfn2/'
            }
        }

        
    }
}
